<h1>Book detail</h1>

<%= image_tag @book.user.get_profile_image(100,100) %>
<%= @book.user.name %>
<%= link_to book_path(@book) do %>
  <%= @book.title %>
<% end %>
<%= @book.body %>

<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>